.items
  background-color: #f7f8fa
  padding: 121px 0 26px
  @media (max-width: $breakpoint-lg - 1)
    padding: 22px 0 47px
  @media (max-width: $breakpoint-md - 1)
    padding: 13px 0 42px
  @media (max-width: $breakpoint-sm - 1)
    padding: 23px 0 41px

  &--test
    padding: 64px 0 62px
    @media (max-width: $breakpoint-lg - 1)
      padding: 43px 0 47px
    @media (max-width: $breakpoint-sm - 1)
      padding: 43px 0 52px

  &__title
    font-size: 36px
    line-height: 1.3
    text-align: center;
    margin-bottom: 71px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 55px
    @media (max-width: $breakpoint-md - 1)
      font-size: 30px
    @media (max-width: $breakpoint-sm - 1)
      font-size: 24px
      margin-bottom: 27px

  &__container
    position: relative;

  &__slider
    @media (max-width: $breakpoint-lg - 1)
      overflow: hidden;
      margin: 0 62px
    @media (max-width: $breakpoint-md - 1)
      margin: 0 82px
    @media (max-width: $breakpoint-sm - 1)
      margin: 0

  &__items
    display: flex;
    flex-wrap wrap
    justify-content center
    margin: 0 -14px
    @media (max-width: $breakpoint-lg - 1)
      flex-wrap nowrap
      justify-content flex-start
      margin: 0

  &__item
    flex-shrink 0
    width: 25%
    padding: 0 14px 63px
    @media (max-width: $breakpoint-lg - 1)
      padding: 0 0 33px

  &__inner
    position: relative;
    background: #ffffff
    padding: 10px
    display: block;
    anim()

    &:hover
      box-shadow -5px 25px 29px rgba(#000, .2)
      text-decoration: none;
      z-index: 1

  &__img
    height: 243px
    display: block;
    background-position: 50% 50%
    background-size: cover;

  &__header
    min-height 74px
    font-size: 24px
    color: #1f2336
    padding: 8px 0
    display: flex;
    align-items center
    justify-content center

  &__info
    background: #1e2335
    color: #ffffff
    display: flex;
    align-items center
    margin-bottom: -32px
    height: 86px
    justify-content space-around
    font-size: 16px
    font-family: 'Playfair Display', serif;

    svg
      width: 25px
      height: 25px
      fill: #fff
      display: inline-block;
      vertical-align: middle;
      margin-right: 13px

  &__pagination
    display: none;

    @media (max-width: $breakpoint-lg - 1)
      display: block;
      .arrow
        position: absolute;
        top: 156px
        z-index: 2
        @media (max-width: $breakpoint-sm - 1)
          position: static;

      .arrow--left
        left: -18px
        @media (max-width: $breakpoint-md - 1)
          left: 2px

      .arrow--right
        right: -18px
        @media (max-width: $breakpoint-md - 1)
          right: 2px
    @media (max-width: $breakpoint-sm - 1)
      display: flex;
      justify-content center
      margin-top: 31px
