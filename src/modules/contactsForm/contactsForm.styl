.contactsForm
  padding: 67px 0 85px
  background: url(./contactsForm-bg.jpg) 50% 50% no-repeat
  background-size: cover
  @media (max-width: $breakpoint-md - 1)
    padding: 52px 0 82px
  @media (max-width: $breakpoint-sm - 1)
    padding: 47px 0 82px

  &__title
    text-align: center;
    font-size: 36px
    color: #ffffff
    margin-bottom: 63px
    @media (max-width: $breakpoint-lg - 1)
      font-size: 30px
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 55px
    @media (max-width: $breakpoint-sm - 1)
      font-size: 24px
      margin-bottom: 48px
      br
        display: none;

  &__row
    display: flex;
    justify-content center
    margin: 0 -20px 70px
    @media (max-width: $breakpoint-md - 1)
      flex-direction column
      margin: 0 0 25px;

    .input
      margin: 0 20px
      width: 100%
      max-width 360px
      @media (max-width: $breakpoint-md - 1)
        margin: 0 auto 22px
        max-width 350px

  &__btn
    text-align: center;
    position: relative;
    z-index: 1
    @media (max-width: $breakpoint-md - 1)
      .btn
        width: 100%
        max-width 350px
