.included
  position: relative;
  padding-top: 140px
  overflow: hidden;
  @media (max-width: $breakpoint-lg - 1)
    padding-top: 120px
  @media (max-width: $breakpoint-md - 1)
    padding-top: 55px

  .c
    padding-bottom: 88px
    //background: #ffffff
    position: relative;
    z-index: 1
    @media (max-width: $breakpoint-lg - 1)
      padding-bottom: 60px

  &:before
    content: ''
    background: url(../../images/sprite-toive.png)
    position: absolute;
    right: 50%
    margin-right: 643px
    bottom: -18px
    opacity: .5


  &__title
    font-size: 40px
    color: #222639
    margin-bottom: 88px
    @media (max-width: $breakpoint-lg - 1)
      text-align: center;
      margin-bottom: 50px
    @media (max-width: $breakpoint-md - 1)
      font-size: 36px
      margin-bottom: 0
    @media (max-width: $breakpoint-sm - 1)
      font-size: 24px

  &__slider
    @media (max-width: $breakpoint-lg - 1)
      overflow: hidden;

  &__items
    display: flex;
    flex-wrap wrap
    counter-reset: included
    @media (max-width: $breakpoint-lg - 1)
      flex-wrap nowrap

  &__item
    width: 33.3333%
    position: relative;
    @media (max-width: $breakpoint-lg - 1)
      flex-shrink 0

    icons = dveri fundament krovlya sistemi soprovojdenie steni
    for sprite in icons
      &--{sprite} .included__head:after
        background: url('./img/sprite-' + sprite + '.png')

    @media (min-width: $breakpoint-lg)
      &:hover
        .included
          &__itemInner
            background: #efefef
            margin: -20px
            padding: 20px
            z-index: 1
            box-shadow -3px 24px 29px rgba(#000, .1)

          &__track
            background: #232638

  &__itemInner
    //width: 100%
    position: relative;
    anim()

  &__head
    font-size: 24px
    line-height: 1.25
    font-weight: 500
    margin-bottom: 30px
    padding-left: 46px
    position: relative;
    padding-top: 20px
    padding-right: 120px
    @media (max-width: $breakpoint-sm - 1)
      padding-left: 10px
      padding-right: 70px

    &:before
      counter-increment: included;
      content: "0" counter(included) "."
      position: absolute;
      font-size: 75px
      font-weight: 900
      line-height: 1;
      color: #191f27
      opacity: .1
      font-family: 'Playfair Display', serif;
      left: 0
      top: -14px

    &:after
      content: ''
      position: absolute;
      right: 20px
      top: 40px
      transform translateY(-50%)
      @media (max-width: $breakpoint-sm - 1)
        right: -10px
        transform translateY(-50%) scale(.7)

  &__content
    position: relative;
    //overflow: hidden;
    font-size: 16px
    font-weight: 300
    height 400px
    padding: 40px 50px 40px 0
    @media (max-width: $breakpoint-sm - 1)
      padding-right: 0

    li
      margin-bottom: 25px
      padding-left: 48px
      @media (max-width: $breakpoint-sm - 1)
        padding-left: 10px

      &:before
        display: none;

    .baron
      height: 100%

  &__contentInner
    height: 100%
    width: 100%
    -webkit-overflow-scrolling: touch;
    padding-right: 50px
    @media (max-width: $breakpoint-sm - 1)
      padding-right: 20px

  &__track
    position: absolute;
    width: 4px
    background: #cecfd3
    top: 40px;
    bottom: 40px;
    right: 44px;
    anim()
    @media (max-width: $breakpoint-sm - 1)
      right: 10px

  &__bar
    position: absolute;
    width: 8px
    background: #deb379
    left: -2px
    cursor: pointer;

  &__pagination
    display: none;
    @media (max-width: $breakpoint-lg - 1)
      display: flex;
      justify-content center
