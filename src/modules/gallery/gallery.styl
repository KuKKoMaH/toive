.gallery
  padding: 32px 0 32px
  @media (max-width: $breakpoint-lg - 1)
    padding: 17px 0 17px

  &--full
    background-color: #f7f8fa
    padding: 65px 0 67px
    @media (max-width: $breakpoint-lg - 1)
      padding: 51px 0 62px
    @media (max-width: $breakpoint-md - 1)
      padding: 39px 0 45px
    @media (max-width: $breakpoint-sm - 1)
      padding: 22px 0 31px

  &--full &
    &__items
      flex-wrap wrap
      justify-content center
      margin: 0 -15px
      @media (max-width: $breakpoint-lg - 1)
        justify-content flex-start
        flex-wrap nowrap
        margin: 0

    &__item
      width: 25%
      padding: 15px
      @media (max-width: $breakpoint-lg - 1)
        padding: 0

    &__pagination
      display: none;
      @media (max-width: $breakpoint-lg - 1)
        display: flex;
        margin-top: 39px
      @media (max-width: $breakpoint-md - 1)
        margin-top: 44px

  &__title
    font-size: 40px;
    line-height: 1.2;
    text-align: center;
    margin-bottom: 53px;
    @media (max-width: $breakpoint-lg - 1)
      font-size: 40px
      line-height: 1.2
      margin-bottom: 53px
      br
        display: none;
    @media (max-width: $breakpoint-md - 1)
      font-size: 30px
      margin-bottom: 43px
    @media (max-width: $breakpoint-sm - 1)
      font-size: 24px
      line-height: 1.55
      margin-bottom: 20px

  &__slider
    overflow: hidden;

  &__items
    display: flex;

  &__item
    flex-shrink 0

  &__img
    display: block;
    position: relative;
    height: 306px
    background-size cover
    background-position: 50% 50%
    cursor: pointer;
    @media (max-width: $breakpoint-md - 1)
      max-width 298px
      margin: 0 auto

    &:after
      content ''
      position: absolute;
      border: 8px solid #fff
      top: 0
      right: 0
      bottom: 0
      left: 0
      opacity: 0
      anim()

    &:hover:after
      top: 10px
      right: 10px
      bottom: 10px
      left: 10px
      opacity: 1

  &__pagination
    display: flex;
    justify-content center
    margin-top: 39px
    @media (max-width: $breakpoint-lg - 1)
      margin-top: 52px
    @media (max-width: $breakpoint-md - 1)
      margin-top: 39px
