.blogList
  padding: 108px 0 124px
  background-color: #f7f8fa
  position: relative;
  @media (max-width: $breakpoint-lg - 1)
    padding: 31px 0 38px
  @media (max-width: $breakpoint-md - 1)
    padding: 31px 0 37px
  @media (max-width: $breakpoint-sm - 1)
    padding: 26px 0 41px

  &:after
    content ''
    position: absolute;
    background: url(../../images/sprite-toive.png)
    right: 50%
    margin-right: 740px;
    top: 427px;
    @media (max-width: $breakpoint-lg - 1)
      display: none;

  &__slider
    @media (max-width: $breakpoint-lg - 1)
      overflow: hidden;

  &__items
    display: flex;
    flex-wrap wrap
    margin: 0 -15px
    @media (max-width: $breakpoint-lg - 1)
      margin: 0
      flex-wrap nowrap

  &__item
    flex-shrink 0
    width: 50%
    padding: 14px
    @media (max-width: $breakpoint-lg - 1)
      padding: 0

  &__card
    background: #ffffff
    padding: 15px
    @media (max-width: $breakpoint-lg - 1)
      max-width 725px
      margin: 0 auto
      padding: 21px 15px
    @media (max-width: $breakpoint-md - 1)
      padding: 6px
    @media (max-width: $breakpoint-sm - 1)
      padding: 0

  &__images
    display: flex;
    margin: 0 -7px 29px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 32px
    @media (max-width: $breakpoint-md - 1)
      margin: 0 0 17px
    @media (max-width: $breakpoint-sm - 1)
      margin-bottom: 21px

  &__image
    flex: 1
    height: 210px
    margin: 0 7px
    background-size: cover
    background-position: 50% 50%
    @media (max-width: $breakpoint-md - 1)
      height: 211px
      margin: 0
      display: none;
      &:first-child
        display: block;
    @media (max-width: $breakpoint-sm - 1)
      height: 226px

  &__title
    display: block;
    font-size: 24px
    font-weight: 500
    margin-bottom: 23px
    padding: 0 24px
    @media (max-width: $breakpoint-md - 1)
      padding: 0 16px
    @media (max-width: $breakpoint-sm - 1)
      padding: 0 12px
      margin-bottom: 11px

  &__content
    padding: 0 24px
    font-size: 16px
    line-height: 1.9
    font-weight: 300
    @media (max-width: $breakpoint-md - 1)
      padding: 0 16px
    @media (max-width: $breakpoint-sm - 1)
      padding: 0 12px

  &__footer
    border-top: 2px solid #e7e7e8
    display: flex;
    padding: 20px 8px
    margin-top: 26px
    @media (max-width: $breakpoint-lg - 1)
      padding: 31px 8px 15px
    @media (max-width: $breakpoint-md - 1)
      margin-top: 13px
      padding: 25px 23px 21px
      flex-direction column
    @media (max-width: $breakpoint-sm - 1)
      padding: 19px 19px 24px
  &__tags
    font-size: 16px
    font-weight: bold;
    padding-left: 23px
    @media (max-width: $breakpoint-md - 1)
      padding-left: 0

  &__tag
    font-weight: 300
    margin-left: 12px
    display: inline-block;
    anim()

    &:hover
      text-decoration: none;
      color: #dfb47a

  &__link
    font-size: 16px
    font-weight: 300
    color: #dfb47a
    flex-shrink 0
    margin-left: auto;
    anim()
    @media (max-width: $breakpoint-md - 1)
      margin-left: 0
      margin-top: 21px

    svg
      width: 20px
      height: 7px
      fill: #dfb47a
      display: inline-block;
      vertical-align: middle;
      margin-right: 20px
      anim()

  &__more
    background: #fff
    width: 100%
    font-size: 20px
    font-weight: 300
    anim()
    margin-top: 24px
    display: block;
    text-align: center;
    @media (max-width: $breakpoint-lg - 1)
      display: none;

    span
      display: inline-block
      position: relative;
      padding: 23px 0

      &:after
        content ''
        position: absolute;
        width: 100%
        height: 3px
        background: #dfb47a
        left: 0
        top: 100%
        anim()

    &:hover
      background: #dfb47a
      color: #ffffff

      span:after
        background: #212638

  &__pagination
    display: none;
    @media (max-width: $breakpoint-lg - 1)
      margin-top: 36px
      display: flex;
      justify-content center
    @media (max-width: $breakpoint-md - 1)
      margin-top: 21px
    @media (max-width: $breakpoint-sm - 1)
      margin-top: 31px
