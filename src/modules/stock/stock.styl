.stock
  padding: 123px 0 125px
  background-color: #f7f8fa
  position: relative;
  @media (max-width: $breakpoint-lg - 1)
    padding: 31px 0 51px
  @media (max-width: $breakpoint-md - 1)
    padding: 36px 0 35px
  @media (max-width: $breakpoint-sm - 1)
    padding: 23px 0 44px

  &:before
    content: ''
    position: absolute;
    background: url(../../images/sprite-toive.png)
    top: 50%
    right: 50%
    margin-right: 740px
    transform translateY(-50%)

  &--active &
    &__item
      &:nth-child(n+4)
        display: block

    &__more
      display: none;

  &__slider
    @media (max-width: $breakpoint-lg - 1)
      overflow: hidden;

  &__items
    @media (max-width: $breakpoint-lg - 1)
      display: flex;
      align-items flex-start

  &__item
    background: #ffffff
    margin-bottom: 78px
    padding: 19px 51px 0
    flex-shrink 0
    position: relative;
    cf()

    @media (max-width: $breakpoint-lg - 1)
      flex-direction column
      padding: 22px 20px 0
      margin-bottom: 65px
    @media (max-width: $breakpoint-md - 1)
      padding: 6px
      margin-bottom: 33px
    @media (max-width: $breakpoint-sm - 1)
      margin-bottom: 41px

    &:nth-child(n+4)
      display: none;
      @media (max-width: $breakpoint-lg - 1)
        display: flex;

  &__image
    width: 387px
    float: left;
    margin-right: 55px
    margin-bottom: 38px
    position: relative;
    z-index: 1

    ^[0]__item:nth-child(2n) &
      float: right;
      margin-right: 0
      margin-left: 55px
      @media (max-width: $breakpoint-lg - 1)
        margin-left: 0
        float: none;

    @media (max-width: $breakpoint-lg - 1)
      float: none;
      width: 100%
      margin-bottom: 0px
      margin-right: 0

  &__primary
    background-position: 50% 50%;
    background-size: contain;
    background-repeat: no-repeat;
    height: 314px
    @media (max-width: $breakpoint-md - 1)
      height: 214px
    @media (max-width: $breakpoint-sm - 1)
      height: 185px

  &__images
    margin: 0 -3px 0
    display: flex;
    flex-wrap wrap

  &__secondary
    //flex: 1
    min-width 33.3333%
    margin-top: 9px
    padding: 0px 3px
    cursor: pointer;

    & div
      height: 70px
      background-position: 50% 50%;
      background-size: cover;
      border: 3px solid transparent
      anim()

    &:hover div, &--active div
      border-color: #dfb47a

  &__content
    margin-bottom: 80px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 40px

  &__title
    font-size: 30px
    padding-top: 22px
    margin-bottom: 44px
    font-weight: 300
    @media (max-width: $breakpoint-lg - 1)
      padding-top: 28px
      margin-bottom: 39px
    @media (max-width: $breakpoint-md - 1)
      padding-top: 25px
      margin-bottom: 40px
      max-width none
      font-size: 24px
      line-height: 1.4
      text-align: center;
    @media (max-width: $breakpoint-sm - 1)
      padding-top: 18px
      line-height: 1.5
      margin-bottom: 25px

  &__bullets
    display: flex;
    margin-bottom: 20px
    //@media (max-width: $breakpoint-lg - 1)
    //  margin-bottom: px
    @media (max-width: $breakpoint-md - 1)
      flex-wrap wrap
      justify-content center
      margin: 0 -30px 9px;
    @media (max-width: $breakpoint-sm - 1)
      margin-bottom: 19px

  &__bullet
    position: relative;
    width: 33.3333%
    padding-left: 45px
    font-weight: 300
    @media (max-width: $breakpoint-md - 1)
      width: auto;
      margin: 0 30px 26px
    @media (max-width: $breakpoint-sm - 1)
      margin: 0 10px 18px

    &:before, &:after
      content: ''
      position: absolute;

    &:after
      width: 1px
      height: 100%
      background: #c4c4c4
      right: 42px
      top: -6px
      @media (max-width: $breakpoint-lg - 1)
        right: 22px
      @media (max-width: $breakpoint-md - 1)
        display: none;

    &:before
      left: 0
      top: -4px

    icons = "s" floors rooms
    for sprite in icons
      &--{sprite}:before
        background: url('../../images/sprite-stock-' + sprite + '.png')

    &:last-child
      &:after
        display: none;

  &__label
    font-size: 16px
    margin-bottom: 4px
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 6px
    @media (max-width: $breakpoint-sm - 1)
      font-size: 11px
      margin-bottom: 5px

  &__value
    font-size: 36px
    @media (max-width: $breakpoint-sm - 1)
      font-size: 25px

  &__button
    position: absolute;
    bottom: -33px
    z-index: 1
    width: 350px
    left: 495px

    ^[0]__item:nth-child(2n) &
      left: auto;
      right: 495px
      @media (max-width: $breakpoint-lg - 1)
        right: auto;

    @media (max-width: $breakpoint-lg - 1)
      position: relative
      z-index: 1
      left: 0
      margin: 30px auto 0
      bottom: 0
    @media (max-width: $breakpoint-sm - 1)
      width: 100%

