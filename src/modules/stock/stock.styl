  &__text
    //margin: 20px 0 60px
    line-height: 2;
    font-size: 18px;
    font-weight: 300
    @media (max-width: $breakpoint-lg - 1)
      margin-top: -50px
    @media (max-width: $breakpoint-lg - 1)
      margin-top: 0px

    & > *:last-child
      margin-bottom: 0

  &__more
    background: #fff
    width: 100%
    font-size: 20px
    font-weight: 300
    anim()
    @media (max-width: $breakpoint-lg - 1)
      display: none;

    span
      display: inline-block
      position: relative;
      padding: 23px 0

      &:after
        content ''
        position: absolute;
        width: 100%
        height: 3px
        background: #dfb47a
        left: 0
        top: 100%
        anim()

    &:hover
      background: #dfb47a
      color: #ffffff

      span:after
        background: #212638

  &__pagination
    display: none;
    @media (max-width: $breakpoint-lg - 1)
      display: flex;
      justify-content center
      margin-top: 65px
    @media (max-width: $breakpoint-md - 1)
