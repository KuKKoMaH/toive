.facing
  padding: 93px 0 0px
  @media (max-width: $breakpoint-lg - 1)
    background-color: #f7f8fa
    padding: 20px 0 0px
  @media (max-width: $breakpoint-md - 1)
    padding: 13px 0 0px

  &--grey
    background-color: #f7f8fa
    padding-bottom: 63px

  &__title
    font-size: 40px
    text-align: center;
    color: #191f27
    margin-bottom: 67px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 41px
    @media (max-width: $breakpoint-md - 1)
      font-size: 30px
      margin-bottom: 45px
    @media (max-width: $breakpoint-sm - 1)
      font-size: 24px
      line-height: 1.4
      margin-bottom: 39px

  &__image
    height: 427px
    position: relative;
    background-size: cover
    background-position: 50% 50%;
    box-shadow -5px 25px 29px rgba(#000, .1)
    margin-bottom: 78px
    @media (max-width: $breakpoint-lg - 1)
      margin: 0 -20px 66px
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 70px
    @media (max-width: $breakpoint-sm - 1)
      height: 351px

    &:after
      content: ''
      display: block;
      opacity: .24
      border: 15px solid #fff
      position: absolute;
      left: 20px
      right: 20px
      top: 20px
      bottom: 20px
      @media (max-width: $breakpoint-lg - 1)
        border-left: 0
        border-right: 0
        left: 0
        right: 0

  &__imageTitle
    font-family: 'Playfair Display', serif;
    background: url(../welcome/welcome-form-bg.jpg)
    font-size: 30px
    color: #ffffff
    position: absolute;
    text-align: center;
    width: 646px
    height: 101px
    left: 50%
    bottom: 0
    margin-bottom: -34px
    margin-left: -323px
    display: flex;
    align-items center
    justify-content center
    z-index: 1
    @media (max-width: $breakpoint-md - 1)
      left: 20px
      right: 20px
      width: auto;
      margin-left: 0
    @media (max-width: $breakpoint-sm - 1)
      left: 0
      right: 0
      font-size: 24px

  &__content
    color: #23273c
    line-height: 1.7
    font-weight: 3001

    h1, h2, h3, h4, h5, h6
      font-family: 'Roboto', sans-serif;
      font-size: 1.35em
      margin-bottom: 1.3em
      @media (max-width: $breakpoint-lg - 1)
        margin-bottom: .4em


  &__form
    margin: 34px 25px 112px
    position: relative;
    background: url(../choice/choice-bg.jpg) 50% 50%
    @media (max-width: $breakpoint-lg - 1)
      margin: 51px 20px 20px
    @media (max-width: $breakpoint-md - 1)
      margin: 32px 16px 20px
    @media (max-width: $breakpoint-sm - 1)
      margin: 26px -10px 20px

    &:before,
    &:after
      content: ''
      position: absolute;
      pointer-events none

    &:before
      border: 10px solid #dfb47a
      top: -25px
      right: -25px
      bottom: -25px
      left: -25px
      @media (max-width: $breakpoint-lg - 1)
        top: -20px
        right: -20px
        bottom: -20px
        left: -20px
      @media (max-width: $breakpoint-md - 1)
        border-width: 5px
        top: -5px
        right: -5px
        bottom: -5px
        left: -5px
      @media (max-width: $breakpoint-sm - 1)
        border-left: 0
        border-right: 0

    &:after
      border: 5px solid #fff
      left: -10px
      top: -10px
      right: -10px
      bottom: -10px
      @media (max-width: $breakpoint-lg - 1)
        display: none;

  &__formImage
    position: absolute;
    pointer-events none
    z-index: 1
    left: 50%
    margin-left: 50%

    //right: -34px
    //top: 43px
    @media (max-width: $breakpoint-lg - 1)
      display: none;

  &__formContent
    position: relative;
    z-index: 2
    padding: 50px 68px 48px
    @media (max-width: $breakpoint-lg - 1)
      padding: 55px 43px 60px
    @media (max-width: $breakpoint-md - 1)
      padding: 53px 43px 70px
    @media (max-width: $breakpoint-sm - 1)
      padding: 43px 10px 60px

  &__formTitle
    text-align: center;
    font-size: 30px
    line-height: 1.35
    margin-bottom: 57px
    @media (max-width: $breakpoint-lg - 1)
      line-height: 1.3

    @media (max-width: $breakpoint-md - 1)
      font-size: 24px
      margin-bottom: 72px
    @media (max-width: $breakpoint-sm - 1)
      font-size: 20px
      line-height: 1.3
      margin-bottom: 49px

  &__formInputs
    display: flex;
    align-items center
    margin: 0px -10px
    @media (max-width: $breakpoint-lg - 1)
      margin: 0
      flex-direction column
      align-items stretch

    > *
      flex: 1
      margin: 0 10px
      @media (max-width: $breakpoint-lg - 1)
        margin: 0 0 25px;
        &:last-child
          margin-bottom: 0

    .btn
      margin-top: 12px
