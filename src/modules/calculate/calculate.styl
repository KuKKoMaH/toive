.calculate
  background-color: #f7f8fa
  padding: 69px 0 125px
  @media (max-width: $breakpoint-lg - 1)
    padding: 20px 0 62px
  @media (max-width: $breakpoint-md - 1)
    padding: 29px 0 79px
  @media (max-width: $breakpoint-sm - 1)
    padding: 12px 0 67px

  &--texture
    background: url(../choice/choice-bg.jpg)
    padding: 81px 0 59px
    @media (max-width: $breakpoint-lg - 1)
      padding: 20px 0 62px
    @media (max-width: $breakpoint-md - 1)
      padding: 29px 0 79px
    @media (max-width: $breakpoint-sm - 1)
      padding: 12px 0 67px


  .c
    position: relative;

    &:before, &:after
      content: ''
      position: absolute;
      background: #232638
      right: 10px
      top: 0
      z-index: 3
      @media (max-width: $breakpoint-lg - 1)
        display: none;

    &:before
      width: 46px
      height: 10px

    &:after
      height: 46px
      width: 10px

  &__container
    border: 10px solid #dfb47a
    border-bottom: 0
    border-left: 0
    position: relative;
    text-align: center;
    padding: 35px 0 0
    z-index: 2
    @media (max-width: $breakpoint-lg - 1)
      border-right: 0
      padding-top: 27px
    @media (max-width: $breakpoint-md - 1)
      border: 0

    &:before, &:after
      content: ''
      position: absolute;
      background: #dfb47a
      bottom: 85px
      @media (max-width: $breakpoint-lg - 1)
        bottom: 249px
      @media (max-width: $breakpoint-md - 1)
        display: none;

    &:before
      width: 39px
      height: 10px
      left: 0

    &:after
      width: 10px
      left: 0
      top: 0

  &__image
    position: absolute;
    left: 50%
    margin-left: -77px
    top: 28px
    pointer-events none
    //z-index: 2
    @media (max-width: $breakpoint-lg - 1)
      display: none;

  &__text
    font-weight: 300
    line-height: 1.65
    padding: 0 100px
    position: relative;
    z-index: 1
    @media (max-width: $breakpoint-lg - 1)
      padding: 0 60px
    @media (max-width: $breakpoint-md - 1)
      padding: 0 20px


    p
      margin-bottom: .9em
      @media (max-width: $breakpoint-md - 1)
        margin-bottom: 1.4em
      @media (max-width: $breakpoint-sm - 1)
        margin-bottom: 1.6em

  &__title
    font-size: 30px
    margin-bottom: 11px
    @media (max-width: $breakpoint-lg - 1)
      line-height: 1.1
      margin-bottom: 21px
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 35px
    @media (max-width: $breakpoint-sm - 1)
      font-size: 24px
      line-height: 1.35
      margin-bottom: 27px

  &__form
    display: flex;
    padding: 0 84px
    margin-top: 43px
    @media (max-width: $breakpoint-lg - 1)
      margin-top: 76px
      flex-direction column
      padding: 0
    @media (max-width: $breakpoint-md - 1)
      margin-top: 46px
      max-width 348px
      margin-left: auto
      margin-right: auto
    @media (max-width: $breakpoint-sm - 1)
      margin-top: 38px

  &__left
    flex: 2

  &__button
    flex: 1
    position: relative;
    z-index: 1
    @media (max-width: $breakpoint-lg - 1)
      margin-top: 5px
    @media (max-width: $breakpoint-md - 1)
      margin-top: 23px
    @media (max-width: $breakpoint-sm - 1)
      margin-top: 20px

    .btn
      width: 100%
      @media (max-width: $breakpoint-lg - 1)
        width: auto;
      @media (max-width: $breakpoint-md - 1)
        width: 100%

  &__inputs
    display: flex;
    padding-right: 21px
    @media (max-width: $breakpoint-md - 1)
      padding-right: 0
      flex-direction column

    .input
      flex: 1
      padding-right: 21px
      @media (max-width: $breakpoint-md - 1)
        padding-right: 0
        margin-bottom: 18px

      &:last-child
        padding-right: 0

  &__file
    position: relative;
    padding 2px 21px 2px 38px
    max-width 50%
    overflow: hidden;
    margin-top: 28px
    min-height 29px
    text-align: left;
    @media (max-width: $breakpoint-lg - 1)
      margin: 28px auto
    @media (max-width: $breakpoint-md - 1)
      max-width: 100%
      margin: 11px 30px
      padding-right: 0

    &:before
      content: ''
      position: absolute;
      left: 0
      top: 0
      background: url(../../images/sprite-file.png)

  &__fileText
    font-size: 16px
    font-weight: 500
    color: #191f27
    border-bottom: 1px dashed #191f27
    display: inline;

  &__fileInput
    position: absolute;
    bottom: 0
    right: 0
    width: 200%
    height: 200%
    opacity: 0
    cursor: pointer;
