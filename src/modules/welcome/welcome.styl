.welcome
  height: 983px
  background: url(./welcome-bg.jpg) 50% 50% no-repeat
  background-size: cover
  padding-top: 310px
  color: #ffffff
  @media (max-width: $breakpoint-lg - 1)
    padding-top: 170px
    height: auto;

  .c
    display: flex;
    align-items flex-start
    position: relative;
    height: 100%
    @media (max-width: $breakpoint-lg - 1)
      flex-direction column
      text-align: center;

  &__title
    font-size: 72px
    line-height: 1
    font-weight: 900
    margin-bottom: 40px
    color: #ffffff
    @media (max-width: $breakpoint-lg - 1)
      font-size: 60px
      margin-bottom: 20px
    @media (max-width: $breakpoint-md - 1)
      font-size: 48px
    @media (max-width: $breakpoint-sm - 1)
      font-size: 36px
      margin-bottom: 35px

  &__subtitle
    font-size: 36px
    line-height: 1.35
    color: #ffffff
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 48px
    @media (max-width: $breakpoint-md - 1)
      font-size: 24px

  &__form
    position: relative;
    width: 437px
    flex-shrink 0
    border: 10px solid #fff
    z-index: 1
    padding: 55px 33px 50px
    margin-top: 28px

    &:before, &:after
      content ''
      display: block;
      position: absolute;

    &:before
      left: 0
      top: 0
      width: 100%
      height: 100%
      background: url(welcome-form-bg.jpg) 50% 50% no-repeat
      background-size: cover
      opacity: .65
      z-index: -1

    &:after
      border: 1px solid #dfb47a
      left: 10px
      top: 10px
      right: 10px
      bottom: -25px
      pointer-events none

    @media (max-width: $breakpoint-lg - 1)
      width: 100%
      padding: 55px 95px 50px
      margin-bottom: 90px
    @media (max-width: $breakpoint-md - 1)
      padding: 55px 34px 50px
      margin-bottom: 60px
    @media (max-width: $breakpoint-sm - 1)
      border-width: 4px
      margin-bottom: 12px
      &:after
        display: none;

  &__text
    font-family: 'Playfair Display', serif;
    font-size: 30px
    text-align: center;
    margin-bottom: 73px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 30px
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 70px

  &__inputWrapper
    position: relative;
    margin-bottom: 64px

    &:after
      content: ''
      position: absolute;
      left: 0
      bottom: 2px
      width: 36px
      height: 2px
      background: #dfb47a
      pointer-events none

  &__input
    font-weight: 300
    font-size: 16px
    border-bottom: 2px solid #ffffff
    padding: 15px 0
    width: 100%
    placeholder(#fff)

    &.wpcf7-not-valid
      border-color: #ed1d25;

  &__test
    position: absolute;
    left: 10px
    bottom: 0
    display: flex;
    height: 212px
    @media (max-width: $breakpoint-lg - 1)
      left: 0
      position: relative;
      z-index: 1
      width: 100%
      text-align: left;
      height: 170px
      margin-bottom: -130px
    @media (max-width: $breakpoint-md - 1)
      height: 212px
      margin-bottom: -150px
    @media (max-width: $breakpoint-sm - 1)
      height: 212px
      flex-direction column
      margin: 0 -10px
      align-self stretch
      width: auto;

  &__testContent
    background: url(welcome-form-bg.jpg) 50% 50% no-repeat
    background-size: cover
    padding: 0 90px 0 78px
    display: flex;
    align-items flex-start
    justify-content center
    flex-direction column
    @media (max-width: $breakpoint-lg - 1)
      flex: 1
    @media (max-width: $breakpoint-sm - 1)
      position: relative;
      text-align: center;
      align-items center
      padding: 0 0 32px

  &__testTitle
    font-family: 'Playfair Display', serif;
    font-size: 24px
    line-height: 1
    margin-bottom: 18px

  &__testText
    font-size: 16px
    font-weight: 300
    line-height: 1.5

  &__testButton
    background: #ffffff
    display: flex;
    align-items center
    justify-content center
    flex-direction column
    font-family: 'Playfair Display', serif;
    font-size: 16px
    color: #23273c
    padding: 0 27px
    @media (max-width: $breakpoint-sm - 1)
      position: absolute;
      top: 0
      left: 0
      width: 100%
      height: 100%
      font-size: 0
      padding: 0
      background-color: transparent;

    svg
      fill #23273c
      width: 31px
      height: 10px
      margin-left: auto;
      margin-top: 13px
      @media (max-width: $breakpoint-sm - 1)
        position: absolute;
        margin-top: 0
        fill: #fff
        bottom: 45px
        left: 50%
        margin-left: -16px
        transform rotate(90deg)

