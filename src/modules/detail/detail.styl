.detail
  background-color: #f7f8fa
  padding: 54px 0 77px
  @media (max-width: $breakpoint-lg - 1)
    padding: 23px 0 56px

  @media (max-width: $breakpoint-md - 1)
    padding: 23px 0 52px
    .c
      padding: 0 20px
  @media (max-width: $breakpoint-sm - 1)
    padding: 23px 0 46px
    .c
      padding: 0 10px

  &__title
    font-size: 30px
    margin: 67px 0 74px
    @media (max-width: $breakpoint-lg - 1)
      margin: 41px 0 34px
    @media (max-width: $breakpoint-md - 1)
      margin: 44px 0 30px
    @media (max-width: $breakpoint-sm - 1)
      font-size: 24px
      line-height: 1.45
      margin: 36px 0 34px

  &__content
    cf()

  &__top
    display contents
    @media (max-width: $breakpoint-lg - 1)
      display: flex;
      flex-direction column-reverse

  &__text
    margin-left: 479px
    font-weight: 300
    font-size: 16px
    line-height: 1.875
    @media (max-width: $breakpoint-lg - 1)
      margin-left: 0

  &__plan
    float: left;
    width: 437px
    @media (max-width: $breakpoint-lg - 1)
      float: none;
      width: 100%
      margin-top: 27px
    @media (max-width: $breakpoint-sm - 1)
      margin-top: 13px

  &__floor
    display: block;
    height: 272px
    margin-bottom: 32px
    position: relative;
    background-size: cover
    background-position: 50% 50%

    &:last-child
      margin-bottom: 0

  &__label
    position: absolute;
    display: flex;
    align-items center
    justify-content center
    font-weight: bold;
    color: #ffffff
    text-align: center;
    background: #dfb47a
    height: 52px
    width: 182px
    right: 0
    top: 72px

  &__gallery
    margin-left: 479px
    @media (max-width: $breakpoint-lg - 1)
      margin-left: 0
    @media (max-width: $breakpoint-sm - 1)
      overflow: hidden;

  &__items
    display: flex;
    margin: 0 -12px
    flex-wrap wrap
    @media (max-width: $breakpoint-sm - 1)
      flex-wrap nowrap
      margin: 0

  &__item
    width: 33.333%
    flex-shrink 0
    height: 271px
    padding: 0 12px
    margin-top: 20px
    @media (max-width: $breakpoint-lg - 1)
      height: 243px
    @media (max-width: $breakpoint-md - 1)
      width: 50%
      padding: 0 10px
    @media (max-width: $breakpoint-sm - 1)
      width: 100%
      padding: 0
      height: 224px

  &__img
    display: block;
    height: 100%
    background-size: cover
    background-position: 50% 50%

  &__pagination
    display: none;
    @media (max-width: $breakpoint-sm - 1)
      margin-top: 42px
      display: flex;
      justify-content center
