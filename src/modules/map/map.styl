.map
  background-color: #f7f8fa
  padding: 115px 0 84px
  @media (max-width: $breakpoint-lg - 1)
    padding: 30px 0 70px
  @media (max-width: $breakpoint-md - 1)
    padding: 32px 0 55px
  @media (max-width: $breakpoint-sm - 1)
    padding: 34px 0 55px


  &__info
    background: #e1e2e5
    display: flex;
    align-items center
    justify-content space-around
    padding: 54px 0 58px
    margin-bottom: 62px
    flex-wrap wrap
    @media (max-width: $breakpoint-lg - 1)
      padding: 44px 34px 0px
      margin-bottom: 40px
      justify-content flex-start
    @media (max-width: $breakpoint-md - 1)
      flex-direction column
      text-align: center;
      padding: 44px 20px 23px
      margin-bottom: 32px
    @media (max-width: $breakpoint-sm - 1)
      padding: 33px 20px 34px
      margin-bottom: 28px

  &__item
    color: #1d202a
    position: relative;
    @media (max-width: $breakpoint-lg - 1)
      margin: 0 30px 50px
    @media (max-width: $breakpoint-md - 1)
      margin: 0 0 33px

    &:before
      content: ''
      position: absolute;
      width: 8px
      height: 8px
      background: #deb379
      top: 5px
      left: -14px
      @media (max-width: $breakpoint-md - 1)
        display: none;

  &__label
    font-size: 16px
    font-weight: 300
    margin-bottom: 3px

  &__value
    font-size: 24px

  &__map
    position: relative;
    height: 447px
    border: 10px solid #fff
    background: #d7dfe6
    box-shadow -5px 25px 29px rgba(#000, .1)
    @media (max-width: $breakpoint-lg - 1)
      margin-left: -20px
      margin-right: -20px

    &:after
      content: ''
      position: absolute;
      top: 10px
      right: 10px
      bottom: 10px
      left: 10px
      border: 1px solid #ffffff
      pointer-events none
