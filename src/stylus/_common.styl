}

.hidden
  display: none !important

#sprites
  position: absolute
  width: 0
  height: 0
  top: 0
  left: 0

del, s
  text-decoration: line-through

.center
  text-align: center;

.right
  text-align: right;

.paroller
  will-change: transform;
  transition: transform 0.1s ease-out !important;
  @media (pointer: coarse)
    transition none !important

