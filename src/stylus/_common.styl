ul, ol
  margin-bottom: 1.55em

  li
    margin-bottom: .5em
    position relative
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: .7em

ul
  li
    padding-left: 20px
    //@media (max-width: $breakpoint-lg - 1)
    //  padding-left: 15px
    //@media (max-width: $breakpoint-md - 1)
    //  padding-left: 10px

    &:before
      content: ''
      width: 7px
      height: 7px
      background: #dfb47a
      position absolute
      top: .6em;
      left: 0px;

ol
  counter-reset: list;

  li
    padding-left: 24px

    &:before
      counter-increment: list;
      content: counter(list) "."
      position absolute
      top: 0;
      left: 2px;
      color: $red
      font-weight: bold;

