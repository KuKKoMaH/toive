.c
  padding: 0 10px
  margin-left: auto
  margin-right: auto
  max-width: $container-lg
  width: 100%
  @media (max-width: $breakpoint-lg - 1)
    max-width: $container-md
    padding: 0 20px
  @media (max-width: $breakpoint-md - 1)
    max-width: 100%
    padding: 0 10px

.page
  //anim(.2s)
  min-height 100vh
  display: flex
  flex-direction column
  will-change filter

  &.mfp-body-open
    filter: blur(10px)
    overflow: hidden

.fc
  display: flex;
  align-items center

.fs
  display: flex;
  align-items start

.f
  flex: 1

.fc, .fs
  @media (max-width: $breakpoint-md - 1)
    flex-direction column

