.checkbox
  display: block;
  font-size: 14px

  &:last-child
    margin-bottom: 0

  input
    display: none;

    &:checked ~ span
      &:before
        background: #ffffff

      &:after
        opacity: 1

  span
    display: block;
    font-family: 'Playfair Display', serif;
    position: relative;
    padding-left: 64px
    line-height: 34px
    font-size: 18px

    &:before, &:after
      content ''
      position: absolute;
      anim()

    &:before
      left: 0
      top: 0
      width: 34px
      height: 34px
      border: 2px solid #e1e3e6
      background: #e1e3e6

    &:after
      background: url(../../images/sprite-checkbox-check.svg)
      left: 10px;
      top: 11px;
      opacity: 0
