.panel
  border: 1px solid #f0f0f0
  border-radius: 5px
  position relative
  background: #ffffff
  box-shadow: 0 10px 25px -10px #e4dede
  //max-width 570px
  margin: 0 auto

  &:after
    content: ''
    display: block;
    position: absolute;
    bottom: -4px
    left: 0
    width: 100%
    height: 15px
    background: #e21d2b
    border-radius: 5px
    z-index: -1

  &__img
    position: absolute;
    bottom: 100%
    right: 70px
    max-width 70%
    @media (max-width: $breakpoint-lg - 1)
      left: 50%
      transform translateX(-50%)
      right: auto;

  &__header
    background: linear-gradient(to right, #e21d2b, #ea3b4e);
    height: 83px
    display flex
    align-items center
    padding-left: 80px;
    color: #ffffff
    font-weight: 500
    font-size: 24px
    line-height: 1.25
    border-radius: 5px
    margin: -1px
    @media (max-width: $breakpoint-lg - 1)
      padding: 0 15px
      text-align: center;
      justify-content center
      font-size: 18px

  &__body
    padding: 35px 52px 56px
    @media (max-width: $breakpoint-lg - 1)
      padding: 15px 15px 35px
      max-width 570px
      margin: 0 auto
